{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@shopora/source"],
    "paths": {
      "@packages/*": ["./packages/*"],
      "@shopora/ui": ["./libs/ui/index.ts"],
      "@shopora/constants": ["./libs/constants/index.ts"],
      "@shopora/utils": ["./libs/utils/index.ts"],
      "@shopora/types": ["./libs/types/index.ts"],
      "@shopora/hooks": ["./libs/hooks/index.ts"],
      "@shopora/providers": ["./libs/providers/index.ts"]
    }
  }
}
